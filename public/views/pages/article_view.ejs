<html lang="en">
<%- include('../partials/header') %>
<body>
<%- include('../partials/navbar') %>

<!-- Article header -->
<header class="py-5 bg-light border-bottom mb-4">
    <div class="container">
        <div class="text-center my-5">
            <h1 class="fw-bolder"><%= article.title %></h1>
            <p class="lead mb-0">Published on <%= article.createdAt %></p>
            <p class="lead mb-0">Latest Update on <%= article.updatedAt %></p>
            <p class="lead mb-0">Author : <b><%= article.username %></b></p>
        </div>
    </div>
</header>

<!-- Page content -->
<div class="container">
    <div class="row">
        <!-- Article content -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div>
                        <!-- Render Markdown content as HTML -->
                        <%- content %>
                    </div>
                </div>
            </div>
            <!-- Optional: Back to list or pagination -->
            <a href="/home" class="btn btn-secondary mb-4">‚Üê Back to Articles</a>
        </div>

        <%-include('../partials/side_widget')%>
    </div>
</div>

<%- include('../partials/footer') %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
