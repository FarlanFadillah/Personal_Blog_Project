<!DOCTYPE html>
<html lang="en">
<%-include('../partials/header')%>
<body class="bg-light d-flex flex-column min-vh-100">

<div class="container my-4">
    <!-- Dashboard Header -->
    <h2 class="text-center mb-4">Dashboard</h2>

    <!-- Cards Row -->
    <div class="row justify-content-center g-4 mb-5">
        <!-- New Article -->
        <div class="col-md-4">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5 class="card-title">Create New Article</h5>
                    <p class="card-text">Write and publish a brand new article.</p>
                    <a href="/admin/article/new" class="btn btn-primary w-100">New Article</a>
                </div>
            </div>
        </div>

        <!-- Settings -->
        <div class="col-md-4">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5 class="card-title">Settings</h5>
                    <p class="card-text">Manage your account and preferences.</p>
                    <a href="/settings" class="btn btn-outline-secondary w-100">Settings</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Articles List -->
    <div class="card shadow" id="articles">
        <div class="card-body">
            <h5 class="card-title mb-3">Your Articles</h5>

            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Date</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%for(let [i, value] of articles.entries()){%>
                    <!-- Example row -->
                        <tr>
                            <th scope="row"><%=i+=1%></th>
                            <td><%=value.title%></td>
                            <td><%=value.createdAt%></td>
                            <td>
                                <a href="/admin/article/edit/<%=value.id%>" class="btn btn-sm btn-warning">Edit</a>

                                <button class="btn btn-sm btn-danger" onclick="document.getElementById('delete_form').submit()" type="submit">Delete</button>
                                <form id="delete_form" action="/admin/article/delete/<%=value.id%>" method="post"></form>
                            </td>
                        </tr>
                    <%}%>
                    <!-- Add more rows dynamically -->
                    </tbody>
                </table>

            </div>
            <button class="btn btn-sm btn-dark" onclick="document.getElementById('logout_form').submit()" type="submit">Logout</button>
            <form id="logout_form" action="/auth/logout" method="post"></form>
        </div>
    </div>

</div>

</body>
</html>
